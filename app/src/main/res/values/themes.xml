<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyFileBrowser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_400</item>
        <item name="colorPrimaryDark">@color/cyan_600</item>
        <item name="colorPrimaryVariant">@color/light_blue_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_400</item>
        <item name="colorSecondaryVariant">@color/blue_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MyFileBrowser.AboutUs">
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="ShapeImageRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/round_shape_drawable</item>
    </style>
    <style name="ThemeButtonPermission" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:textColor">?colorSecondaryVariant</item>
    </style>
    <style name="ThemeInputBoxDetail" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/light_blue_A400</item>
        <item name="hintTextColor">@color/light_blue_A400</item>
    </style>
    <style name="Theme.MyFileBrowser.NavDrawer">
        <item name="colorPrimary">@color/light_blue_400</item>
    </style>
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.Subhead">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Text.Body1">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>
    <dimen name="padding_manual_view_dialog">16dp</dimen>
    <dimen name="round_shape_drawable">6dp</dimen>
    <dimen name="menu_item_icon_size">24dp</dimen>
</resources>