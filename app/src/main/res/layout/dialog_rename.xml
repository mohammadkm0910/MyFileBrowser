<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp">
    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close"
        app:tint="@color/grey_800"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@null"/>
    <com.mohammadkk.myfilebrowser.ui.LabelView
        style="@style/Text.Body1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="6dp"
        android:textSize="16sp"
        android:text="@string/new_name"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCloseDialog"
        android:layout_marginVertical="8dp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLines="1"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOkDialog"
        style="@style/ThemeButtonPermission"
        android:layout_below="@+id/editName"
        android:layout_alignParentEnd="true"
        android:alpha="0.5"
        android:enabled="false"
        android:text="@android:string/ok"
        app:backgroundTint="@color/white"
        app:rippleColor="@color/grey_300"/>
</RelativeLayout>